    <style>
        :root {
            --primary-green: #1a5d4a;
            --primary-green-light: #2a7a63;
            --primary-green-dark: #0f3d32;
            --primary-green-ultra-light: rgba(26, 93, 74, 0.1);
        }

        .bg-primary-green {
            background-color: var(--primary-green) !important;
        }

        .text-primary-green {
            color: var(--primary-green) !important;
        }

        .hero-section {
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-green-light) 100%);
            position: relative;
            overflow: hidden;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="40" cy="80" r="1" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
                opacity: 0.3;
            }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .card {
            border: none;
            transition: all 0.3s ease;
            background: white;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 35px rgba(26, 93, 74, 0.2) !important;
            }

        .card-body i {
            color: var(--primary-green) !important;
            transition: transform 0.3s ease;
        }

        .card:hover .card-body i {
            transform: scale(1.1);
        }

        .feature-number {
            background: var(--primary-green);
            color: white;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            font-weight: bold;
            margin: 0 auto 1rem;
        }

        .stats-section {
            background: var(--primary-green-ultra-light);
            border-radius: 20px;
            padding: 3rem 2rem;
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            font-size: 3rem;
            font-weight: bold;
            color: var(--primary-green);
            line-height: 1;
        }

        .timeline-item {
            position: relative;
            padding-left: 3rem;
            margin-bottom: 2rem;
        }

            .timeline-item::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                width: 20px;
                height: 20px;
                background: var(--primary-green);
                border-radius: 50%;
                border: 4px solid white;
                box-shadow: 0 0 0 4px var(--primary-green-ultra-light);
            }

            .timeline-item::after {
                content: '';
                position: absolute;
                left: 9px;
                top: 20px;
                width: 2px;
                height: calc(100% + 1rem);
                background: var(--primary-green-ultra-light);
            }

            .timeline-item:last-child::after {
                display: none;
            }

        .btn-primary-green {
            background-color: var(--primary-green);
            border-color: var(--primary-green);
            color: white;
            padding: 12px 30px;
            font-weight: 600;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

            .btn-primary-green:hover {
                background-color: var(--primary-green-dark);
                border-color: var(--primary-green-dark);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(26, 93, 74, 0.3);
            }

        .section-divider {
            height: 4px;
            background: linear-gradient(90deg, transparent, var(--primary-green), transparent);
            margin: 3rem 0;
            border-radius: 2px;
