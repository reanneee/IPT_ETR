@{
    ViewData["Title"] = "Contact Us - IPT Endterm Plants";
}
<div class="bg-success text-white text-center py-5">
    <div class="container">
        <h1 class="display-4">Get in Touch</h1>
        <p class="lead">We're here to help your plant journey flourish.</p>
    </div>
</div>
<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto text-center">
            <h2 class="text-success mb-4">Contact IPT Endterm</h2>
            <p class="lead mb-5">
                Have questions about plants, orders, or need growing advice?
                Our team is ready to help you cultivate success.
            </p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <i class="fas fa-map-marker-alt fa-4x text-success mb-3"></i>
                    <h4 class="card-title">Visit Our Nursery</h4>
                    <p class="card-text">
                        123 Commerce Street<br>
                        Business District<br>
                        City, State 12345
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <i class="fas fa-phone fa-4x text-success mb-3"></i>
                    <h4 class="card-title">Call Us</h4>
                    <p class="card-text">
                        (555) 123-4567<br>
                        <small class="text-muted">Mon-Fri: 9AM-6PM<br>Sat-Sun: 10AM-4PM</small>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <i class="fas fa-envelope fa-4x text-success mb-3"></i>
                    <h4 class="card-title">Email Support</h4>
                    <p class="card-text">
                        contact@ecommerce.com<br>
                        <small class="text-muted">We respond within 24 hours</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-lg-10 mx-auto text-center">
            <h2 class="text-success mb-4">Ready to Grow Together?</h2>
            <p class="lead">
                Whether you're a beginner or experienced gardener, we're here to support your green journey.
                @* Sana hindi kami bumagsak sa finals *@
            </p>
        </div>
    </div>
@* </div> *@