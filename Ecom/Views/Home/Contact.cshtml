<!-- Views/Home/Contact.cshtml -->
@{
    ViewData["Title"] = "Contact";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <h1>Contact Us</h1>
        <p class="lead">Get in touch with us for any questions or concerns.</p>

        <div class="row mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-map-marker-alt text-primary me-2"></i>Address</h5>
                        <p class="card-text">
                            123 Commerce Street<br>
                            Business District<br>
                            City, State 12345
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-phone text-primary me-2"></i>Phone</h5>
                        <p class="card-text">(555) 123-4567</p>

                        <h5 class="card-title mt-3"><i class="fas fa-envelope text-primary me-2"></i>Email</h5>
                        <p class="card-text">contact@ecommerce.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>