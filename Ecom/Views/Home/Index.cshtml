<!-- Views/Home/Index.cshtml -->
@model List<Ecom.Models.Product>
@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-white py-5 mb-5 rounded" style="background: url('/uploads/products/herobanner.jpg') center center / cover no-repeat;">
    <div class="container text-center" style=" border-radius: 1rem;">
        <h1 class="display-4 fw-bold">Welcome to Our Store</h1>
        <p class="lead">Discover amazing products at great prices</p>
        <a class="btn btn-light btn-lg" asp-controller="Product" asp-action="Index">Shop Now</a>
    </div>
</div>


<div class="row">
    <div class="col-12">
        <h2 class="mb-4 text-center" style="margin-bottom:65px">Featured Products</h2>
        @if (Model.Any())
        {
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card h-100">
                            @if (!string.IsNullOrEmpty(product.Image))
                            {
                                <img src="@product.Image" class="card-img-top" alt="@product.ProductName" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.ProductName</h5>
                                <p class="card-text flex-grow-1">@product.Description</p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h5 text-primary mb-0">$@product.Price.ToString("F2")</span>
                                        <span class="badge bg-secondary">@product.CategoryName</span>
                                    </div>
                                    <div class="mt-2">
                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductID"
                                           class="btn btn-primary btn-sm">View Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                <h4>No products available</h4>
                <p class="text-muted">Check back later for new arrivals!</p>
            </div>
        }
    </div>
</div>