@model Ecom.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- wider container -->
            <div class="card shadow border rounded-4 bg-white p-4">
                <!-- white bg with border -->
                <div class="text-center mb-4">
                    <h3 class="fw-semibold text-dark">Create an Account</h3>
                    <p class="text-muted">Fill in your information to register</p>
                </div>

                <form asp-action="Register" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Firstname" class="form-label text-dark">First Name</label>
                            <input asp-for="Firstname" class="form-control border rounded-3" />
                            <span asp-validation-for="Firstname" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Middlename" class="form-label text-dark">Middle Name</label>
                            <input asp-for="Middlename" class="form-control border rounded-3" />
                            <span asp-validation-for="Middlename" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Lastname" class="form-label text-dark">Last Name</label>
                        <input asp-for="Lastname" class="form-control border rounded-3" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label text-dark">Address</label>
                        <textarea asp-for="Address" rows="3" class="form-control border rounded-3"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label text-dark">Email</label>
                        <input asp-for="Email" class="form-control border rounded-3" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label text-dark">Password</label>
                            <input asp-for="Password" type="password" class="form-control border rounded-3" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label text-dark">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control border rounded-3" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary fw-semibold rounded-3">Register</button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p class="mb-0 text-muted">
                        Already have an account?
                        <a asp-action="Login" class="fw-semibold text-decoration-none">Login here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
