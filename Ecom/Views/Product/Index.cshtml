@model List<Ecom.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<div class="row mb-4">
    <div class="col-12">
        <h1>Products</h1>
        <!-- Search and Filter -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <input type="text" id="searchInput" class="form-control" placeholder="Search products..." value="@ViewBag.Search">
            </div>
            <div class="col-md-4">
                <select id="categorySelect" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var category in ViewBag.Categories as List<Ecom.Models.Category>)
                    {
                        <option value="@category.CategoryID" selected="@(ViewBag.SelectedCategory?.ToString() == category.CategoryID.ToString())">
                            @category.CategoryName
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <button type="button" id="clearSearch" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Clear
                </button>
            </div>
        </div>
    </div>
</div>

<div id="productsContainer" class="row">
    @if (Model.Any())
    {
        @foreach (var product in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(product.Image))
                    {
                        <img src="@product.Image" class="card-img-top" alt="@product.ProductName" style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                            <i class="fas fa-image fa-4x text-muted"></i>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text flex-grow-1">@product.Description</p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="h5 text-primary mb-0">$@product.Price.ToString("F2")</span>
                                <span class="badge bg-secondary">@product.CategoryName</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Stock: @product.Stock</small>
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductID"
                                   class="btn btn-primary btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-search fa-4x text-muted mb-3"></i>
                <h4>No products found</h4>
                <p class="text-muted">Try adjusting your search criteria.</p>
            </div>
        </div>
    }
</div>

<!-- Loading indicator -->
<div id="loadingIndicator" class="text-center py-5" style="display: none;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
    <p class="mt-2">Searching products...</p>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        let searchTimeout;

        // Function to render products
        function renderProducts(products) {
            let html = '';

            if (products.length === 0) {
                html = `
                    <div class="col-12">
                        <div class="text-center py-5">
                            <i class="fas fa-search fa-4x text-muted mb-3"></i>
                            <h4>No products found</h4>
                            <p class="text-muted">Try adjusting your search criteria.</p>
                        </div>
                    </div>
                `;
            } else {
                products.forEach(function(product) {
                    let imageHtml = '';
                    if (product.image && product.image !== '') {
                        imageHtml = `<img src="${product.image}" class="card-img-top" alt="${product.productName}" style="height: 250px; object-fit: cover;">`;
                    } else {
                        imageHtml = `
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                                <i class="fas fa-image fa-4x text-muted"></i>
                            </div>
                        `;
                    }

                    html += `
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                ${imageHtml}
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">${product.productName}</h5>
                                    <p class="card-text flex-grow-1">${product.description}</p>
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="h5 text-primary mb-0">$${product.price}</span>
                                            <span class="badge bg-secondary">${product.categoryName || 'No Category'}</span>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">Stock: ${product.stock}</small>
                                            <a href="/Product/Details/${product.productID}" class="btn btn-primary btn-sm">View Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                });
            }

            $('#productsContainer').html(html);
        }

        // Function to perform search
        function performSearch() {
            const keyword = $('#searchInput').val();
            const categoryId = $('#categorySelect').val();

            $('#loadingIndicator').show();
            $('#productsContainer').hide();

            $.ajax({
                url: '/Product/LiveSearch',
                type: 'GET',
                data: {
                    keyword: keyword,
                    categoryId: categoryId
                },
                success: function (data) {
                    $('#loadingIndicator').hide();
                    $('#productsContainer').show();
                    renderProducts(data);
                },
                error: function() {
                    $('#loadingIndicator').hide();
                    $('#productsContainer').show();
                    $('#productsContainer').html(`
                        <div class="col-12">
                            <div class="alert alert-danger text-center">
                                <i class="fas fa-exclamation-triangle"></i>
                                An error occurred while searching. Please try again.
                            </div>
                        </div>
                    `);
                }
            });
        }

        // Search input with debounce
        $('#searchInput').on('keyup', function () {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(function() {
                performSearch();
            }, 300); // 300ms delay to avoid too many requests
        });

        // Category change
        $('#categorySelect').on('change', function () {
            performSearch();
        });

        // Clear search
        $('#clearSearch').on('click', function() {
            $('#searchInput').val('');
            $('#categorySelect').val('');
            performSearch();
        });
    });
</script>