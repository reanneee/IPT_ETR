<!-- Views/Product/Details.cshtml -->
@model Ecom.Models.Product
@{
    ViewData["Title"] = Model.ProductName;
}

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Model.Image" class="img-fluid rounded" alt="@Model.ProductName">
        }
        else
        {
            <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                <i class="fas fa-image fa-5x text-muted"></i>
            </div>
        }
    </div>
    <div class="col-md-6">
        <h1>@Model.ProductName</h1>
        <p class="lead">@Model.Description</p>

        <div class="mb-3">
            <span class="h3 text-primary">$@Model.Price.ToString("F2")</span>
        </div>

        <div class="mb-3">
            <span class="badge bg-secondary">@Model.CategoryName</span>
        </div>

        <div class="mb-3">
            <strong>Stock Available:</strong> @Model.Stock units
        </div>

        @if (Model.Stock > 0)
        {
            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                <input type="hidden" name="productId" value="@Model.ProductID" />
                <div class="row mb-3">
                    <div class="col-4">
                        <label for="quantity" class="form-label">Quantity:</label>
                        <input type="number" class="form-control" name="quantity" value="1" min="1" max="@Model.Stock" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-cart-plus"></i> Add to Cart
                </button>
            </form>
        }
        else
        {
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i> Out of Stock
            </div>
        }
    </div>
</div>
