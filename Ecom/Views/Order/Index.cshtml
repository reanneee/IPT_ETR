@model List<Ecom.Models.Order>

@{
    ViewData["Title"] = "My Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-shopping-bag me-2"></i>My Orders
                </h2>
                <a href="@Url.Action("Index", "Product")" class="btn btn-primary">
                    <i class="fas fa-shopping-cart me-2"></i>Continue Shopping
                </a>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-shopping-bag fa-4x text-muted"></i>
                    </div>
                    <h4 class="text-muted">No Orders Found</h4>
                    <p class="text-muted mb-4">You haven't placed any orders yet.</p>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-primary">
                        <i class="fas fa-shopping-cart me-2"></i>Start Shopping
                    </a>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var order in Model)
                    {
                        <div class="col-12 mb-4">
                            <div class="card shadow-sm">
                                <div class="card-header bg-light">
                                    <div class="row align-items-center">
                                        <div class="col-md-3">
                                            <strong>Order #@order.OrderID</strong>
                                        </div>
                                        <div class="col-md-3">
                                            <small class="text-muted">
                                                <i class="fas fa-calendar-alt me-1"></i>
                                                @order.OrderDate.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                        <div class="col-md-3">
                                            @{
                                                string statusClass = order.Status?.ToLower() switch
                                                {
                                                    "pending" => "badge bg-warning text-dark",
                                                    "processing" => "badge bg-info",
                                                    "shipped" => "badge bg-primary",
                                                    "delivered" => "badge bg-success",
                                                    "cancelled" => "badge bg-danger",
                                                    _ => "badge bg-secondary"
                                                };
                                            }
                                            <span class="@statusClass">
                                                @(order.Status ?? "Pending")
                                            </span>
                                        </div>
                                        <div class="col-md-3 text-end">
                                            <strong class="text-success">
                                                $@order.TotalAmount.ToString("N2")
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="mb-2">
                                                <strong>Shipping Address:</strong>
                                            </div>
                                            <p class="text-muted mb-0">
                                                <i class="fas fa-map-marker-alt me-2"></i>
                                                @order.ShippingAddress
                                            </p>
                                        </div>
                                        <div class="col-md-4 text-end">
                                            <a href="@Url.Action("Details", new { id = order.OrderID })"
                                               class="btn btn-outline-primary">
                                                <i class="fas fa-eye me-2"></i>View Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Orders Summary -->
                <div class="card mt-4">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <h5 class="text-primary">@Model.Count</h5>
                                <small class="text-muted">Total Orders</small>
                            </div>
                            <div class="col-md-4">
                                <h5 class="text-success">₱@Model.Sum(o => o.TotalAmount).ToString("N2")</h5>
                                <small class="text-muted">Total Spent</small>
                            </div>
                            <div class="col-md-4">
                                <h5 class="text-info">@Model.Count(o => o.Status == "Delivered")</h5>
                                <small class="text-muted">Delivered Orders</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
        border: 1px solid #e3e6f0;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1) !important;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.5em 0.75em;
    }

    .text-success {
        color: #28a745 !important;
    }

    .text-primary {
        color: #007bff !important;
    }

    .text-info {
        color: #17a2b8 !important;
    }

    .card-header {
        border-bottom: 1px solid #e3e6f0;
        background-color: #f8f9fc !important;
    }

    .btn-outline-primary:hover {
        transform: translateY(-1px);
    }

    @@media (max-width: 768px) {
        .card-header .row > div {
            margin-bottom: 0.5rem;
        }

        .card-header .row > div:last-child {
            margin-bottom: 0;
        }

        .text-end {
            text-align: left !important;
        }
    }
</style>