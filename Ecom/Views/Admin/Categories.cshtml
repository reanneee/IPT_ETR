@model IEnumerable<Ecom.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <h2>Categories</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <a asp-action="CreateCategory" class="btn btn-success mb-3">+ Add New Category</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Category Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="EditCategory" asp-route-id="@item.CategoryID" class="btn btn-sm btn-primary">Edit</a>

                        <form asp-action="DeleteCategory" asp-route-id="@item.CategoryID" method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this category?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
